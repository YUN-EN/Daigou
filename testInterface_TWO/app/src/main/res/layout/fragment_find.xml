<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingStart="35dp"
    tools:context=".FindFragment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/clothesCard"
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/categoryCloth"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="50dp"
                                    android:text="@string/clothes"
                                    android:textColor="@color/white"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="80dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="10sp"
                                    android:maxHeight="100dp"
                                    android:src="@drawable/clothes" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/shoesCard"
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="10dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/categoryShoes"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="50dp"
                                    android:text="@string/shoes"
                                    android:textColor="#455A64"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="80dp"
                                    android:maxHeight="100dp"
                                    android:src="@drawable/shoes"
                                    android:layout_alignParentStart="true"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/bagCard"
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="10dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/categoryBag"
                                android:padding="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="50dp"
                                    android:text="@string/bag"
                                    android:textColor="@color/white"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />
                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="80dp"
                                    android:maxHeight="100dp"
                                    android:src="@drawable/bag"
                                    android:layout_alignParentStart="true" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/medicineCard"
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="10dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/categoryMedicine"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="50dp"
                                    android:text="@string/medicine"
                                    android:textColor="#3949AB"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="80dp"
                                    android:layout_alignParentStart="true"
                                    android:maxHeight="100dp"
                                    android:src="@drawable/medicine" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/snackCard"
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FFC05E"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="50dp"
                                    android:text="@string/snack"
                                    android:textColor="@color/black"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="80dp"
                                    android:layout_alignParentStart="true"
                                    android:maxHeight="100dp"
                                    android:src="@drawable/snacks" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/accessoriesCard"
                            android:layout_width="330dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="15dp"
                            android:layout_marginTop="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#51DBB0"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="50dp"
                                    android:text="@string/accessories"
                                    android:textColor="@color/black"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentStart="true"
                                    android:maxHeight="100dp"
                                    android:src="@drawable/accessories" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                </LinearLayout>
</FrameLayout>